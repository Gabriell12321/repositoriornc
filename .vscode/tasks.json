{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git: Commit and Push (master)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        {
          "version": "2.0.0",
          "tasks": [
            {
              "label": "Git: Commit e Push - oranização de pasta",
              "type": "shell",
              "command": "cmd",
