{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": false,
    "outDir": "static/compiled",
    "rootDir": "static/ts",
    "allowJs": true,
    "checkJs": false,
    "removeComments": false
  },
  "include": ["static/ts/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
